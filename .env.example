# ====================================================
# ENVIRONMENT CONFIGURATION FOR ENERGY FORECASTING API
# ====================================================

# Flask configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_ENV=production
FLASK_DEBUG=False
LOG_LEVEL=INFO

# MLflow configuration
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=http://minio:9000  # Optional: for artifact storage

# AWS credentials (if using S3 for artifacts)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# Model configuration
MODEL_URI=models:/energy_forecasting_model/Production  # Specific model to load
MODEL_INPUT_STEPS=48  # Expected input sequence length
MODEL_OUTPUT_STEPS=24  # Output prediction length